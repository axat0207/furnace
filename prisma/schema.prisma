// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())

  username  String   @unique
  name      String? // Make name optional if we only ask for username
  startDate DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  settings      Settings?
  dailyLogs     DailyLog[]
  habits        Habit[]
  learningItems LearningItem[]
  problems      Problem[]
  notes         Note[]
  practiceLog   PracticeEntry[]

  // Money Manager
  transactions    Transaction[]
  categories      Category[]
  paidExpenses    SharedExpense[] @relation("PaidExpenses")
  expenseSplits   ExpenseSplit[]  @relation("ExpenseSplits")
}

model Settings {
  id          String  @id @default(cuid())
  userId      String  @unique
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  minimalMode Boolean @default(false)
  theme       String  @default("dark")
}

model DailyLog {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date            String // YYYY-MM-DD format
  focusItems      String[] // Array of focus items
  habitsCompleted String[] // Array of habit IDs
  mood            Int?
  notes           String?
  detoxLog        Json? // Array of {trigger, response, outcome}
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId, date])
}

model Habit {
  id                    String  @id @default(cuid())
  userId                String
  user                  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  habitId               String // e.g., "gym", "fog_habit"
  label                 String
  category              String // physical, mental, detox
  requiredInMinimalMode Boolean @default(false)

  @@unique([userId, habitId])
  @@index([userId])
}

model LearningItem {
  id               String  @id @default(cuid())
  userId           String
  user             User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic            String
  status           String  @default("not_started") // not_started, in_progress, internalized
  explanation      String?
  realWorldMapping String?

  @@index([userId])
}

model Problem {
  id          String  @id @default(cuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  type        String // dsa, debugging, real_world
  difficulty  String // easy, medium, hard
  solved      Boolean @default(false)
  explanation String?

  @@index([userId])
}

model Note {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  category String // office, casual, relationship
  content  String

  @@index([userId])
}

model PracticeEntry {
  id      String   @id @default(cuid())
  userId  String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date    DateTime @default(now())
  type    String // written, verbal
  content String?

  @@index([userId])
}

// Money Manager Models

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  type        String // INCOME, EXPENSE
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  date        DateTime @default(now())
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, date])
}

model Category {
  id           String        @id @default(cuid())
  name         String
  type         String // INCOME, EXPENSE
  icon         String? // Optional icon identifier
  color        String? // Optional color hex
  isDefault    Boolean       @default(false)
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([userId, name, type])
  @@index([userId])
}

// Shared Expenses (Splitwise-like)
model SharedExpense {
  id          String   @id @default(cuid())
  description String
  totalAmount Float
  currency    String   @default("INR")
  date        DateTime @default(now())
  category    String?  // e.g., "Food", "Travel", "Rent"
  
  // Who paid the full amount
  paidByUserId String
  paidBy       User     @relation("PaidExpenses", fields: [paidByUserId], references: [id], onDelete: Cascade)
  
  // Participants and their shares
  splits      ExpenseSplit[]
  
  isSettled   Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([paidByUserId])
  @@index([date])
}

// Individual split for each participant in a shared expense
model ExpenseSplit {
  id        String   @id @default(cuid())
  
  expenseId String
  expense   SharedExpense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation("ExpenseSplits", fields: [userId], references: [id], onDelete: Cascade)
  
  shareAmount Float  // How much this user owes
  isPaid      Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([expenseId, userId])
  @@index([userId])
  @@index([expenseId])
}
